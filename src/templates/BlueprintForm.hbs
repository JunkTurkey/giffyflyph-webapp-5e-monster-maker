							<label>1st (Best)</label>
							<select class="form-control" name="abilities.quickstart[0].ability" ability="{{blueprint.abilities.quickstart.[0].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[0].ability "str"}}>Strength</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[0].ability "dex"}}>Dexterity</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[0].ability "con"}}>Constitution</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[0].ability "int"}}>Intelligence</option>
