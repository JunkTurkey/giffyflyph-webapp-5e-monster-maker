<form id="laboratory-blueprint-form" data-method="{{blueprint.method}}" data-rank="{{blueprint.description.rank}}">
	<div class="form-group">
		<label>Метод <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-method"><span class="fas fa-question-circle"></span></button></label>
		<div class="form-radio-list">
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" value="quickstart" id="blueprint-method-quickstart" name="method" {{checked blueprint.method "quickstart"}}>
				<label class="form-check-label" for="blueprint-method-quickstart">Быстрый старт</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" value="manual" id="blueprint-method-manual" name="method" {{checked blueprint.method "manual"}}>
				<label class="form-check-label" for="blueprint-method-manual">Ручной</label>
			</div>
		</div>
	</div>
	<div class="form-group hidden">
		<label>VID</label>
		<input type="text" class="form-control" name="vid" {{{setValue blueprint.vid}}}>
	</div>
	<div class="accordion" id="accordion-blueprint">
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#blueprint-description" {{#if display.blueprint-description}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Описание</span>
				</button>
			</div>
			<div id="blueprint-description" class="collapse {{#if display.blueprint-description}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Имя</label>
						<input type="text" class="form-control" name="description.name" placeholder="Monster" {{{setValue blueprint.description.name}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Уровень</label>
						<input type="number" class="form-control" name="description.level" placeholder="0" min="-3" max="30" {{{setValue blueprint.description.level}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Роль</label>
						<select class="form-control" name="description.role">
							<option value="controller" {{selected blueprint.description.role "controller"}}>Контроллер</option>
							<option value="defender" {{selected blueprint.description.role "defender"}}>Защитник</option>
							<option value="lurker" {{selected blueprint.description.role "lurker"}}>Скрытень</option>
							<option value="scout" {{selected blueprint.description.role "scout"}}>Разведчик</option>
							<option value="sniper" {{selected blueprint.description.role "sniper"}}>Снайпер</option>
							<option value="striker" {{selected blueprint.description.role "striker"}}>Атакующий</option>
							<option value="supporter" {{selected blueprint.description.role "supporter"}}>Поддержка</option>
						</select>
					</div>
					<div class="form-group quickstart-only">
						<label>Ранг</label>
						<select class="form-control rank-toggle" name="description.rank">
							<option value="minion" {{selected blueprint.description.rank "minion"}}>Миньон</option>
							<option value="standard" {{selected blueprint.description.rank "standard"}}>Стандарт</option>
							<option value="elite" {{selected blueprint.description.rank "elite"}}>Элитный</option>
							<option value="solo" {{selected blueprint.description.rank "solo"}}>Соло</option>
						</select>
					</div>
					<div class="form-group quickstart-only solo-only">
						<label>Игроки</label>
						<input type="number" class="form-control" name="description.players" placeholder="0" min="1" {{{setValue blueprint.description.players}}}>
					</div>
					<div class="form-group quickstart-only solo-only">
						<label>Фаза</label>
						<div class="flex-input">
							<input type="number" class="form-control" name="description.phase" placeholder="1" min="1" {{{setValue blueprint.description.phase}}}>
							<span>из</span>
							<input type="number" class="form-control" name="description.phases" placeholder="1" min="1" {{{setValue blueprint.description.phases}}}>
						</div>
					</div>
					<div class="form-group">
						<label>Размер</label>
						<select class="form-control" name="description.size">
							<option value="Крошечный" {{selected blueprint.description.size "tiny"}}>Крошечный</option>
							<option value="Маленький" {{selected blueprint.description.size "small"}}>Маленький</option>
							<option value="Средний" {{selectedDefault blueprint.description.size "medium"}}>Средний</option>
							<option value="Большой" {{selected blueprint.description.size "large"}}>Большой</option>
							<option value="Огромный" {{selected blueprint.description.size "huge"}}>Огромный</option>
							<option value="Гигантский" {{selected blueprint.description.size "gargantuan"}}>Гигантский</option>
						</select>
					</div>
					<div class="form-group">
						<label>Тип</label>
						<select class="form-control" name="description.type">
							<option value="Абберация" {{selected blueprint.description.type "aberration"}}>Абберация</option>
							<option value="Животное" {{selected blueprint.description.type "beast"}}>Животное</option>
							<option value="Небожитель" {{selected blueprint.description.type "celestial"}}>Небожитель</option>
							<option value="Конструкт" {{selected blueprint.description.type "construct"}}>Конструкт</option>
							<option value="Дракон" {{selected blueprint.description.type "dragon"}}>Дракон</option>
							<option value="Элементаль" {{selected blueprint.description.type "elemental"}}>Элементаль</option>
							<option value="Фея" {{selected blueprint.description.type "fey"}}>Фея</option>
							<option value="Исчадие" {{selected blueprint.description.type "fiend"}}>Исчадие</option>
							<option value="Великан" {{selected blueprint.description.type "giant"}}>Великан</option>
							<option value="Гуманоид" {{selectedDefault blueprint.description.type "humanoid"}}>Гуманоид</option>
							<option value="Монстр" {{selected blueprint.description.type "monstrosity"}}>Монстр</option>
							<option value="Слизь" {{selected blueprint.description.type "ooze"}}>Слизь</option>
							<option value="Растение" {{selected blueprint.description.type "plant"}}>Растение</option>
							<option value="Нежить" {{selected blueprint.description.type "undead"}}>Нежить</option>
						</select>
					</div>
					<div class="form-group">
						<label>Мировоззрение</label>
						<select class="form-control" name="description.alignment">
							<option value="Законно Доброе" {{selected blueprint.description.alignment "lawful good"}}>Законно Доброе</option>
							<option value="Нейтрально Доброе" {{selected blueprint.description.alignment "neutral good"}}>Нейтрально Доброе</option>
							<option value="Хаотично Доброе" {{selected blueprint.description.alignment "chaotic good"}}>Хаотично Доброе</option>
							<option value="Законно Нейтральное" {{selected blueprint.description.alignment "lawful neutral"}}>Законно Нейтральное</option>
							<option value="Нейтральное" {{selectedDefault blueprint.description.alignment "neutral"}}>Нейтральное</option>
							<option value="Хаотично Нейтральное" {{selected blueprint.description.alignment "chaotic neutral"}}>Хаотично Нейтральное</option>
							<option value="Законно Злое" {{selected blueprint.description.alignment "lawful evil"}}>Законно Злое</option>
							<option value="Нейтрально Злое" {{selected blueprint.description.alignment "neutral evil"}}>Нейтрально Злое</option>
							<option value="Хаотично Злое" {{selected blueprint.description.alignment "chaotic evil"}}>Хаотично Злое</option>
							<option value="Без мировоззрения" {{selected blueprint.description.alignment "unaligned"}}>Без мировоззрения</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="card repeatable-section" data-path="tags" data-template="BlueprintFormTag">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-tags" {{#if display.blueprint-tags}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Тэги</span>
					<span class="badge">{{blueprint.tags.length}}</span>
				</button>
			</div>
			<div id="blueprint-tags" class="collapse {{#if display.blueprint-tags}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					{{#each blueprint.tags}}
						{{> BlueprintFormTag this}}
					{{/each}}
				</div>
				<div class="card-footer text-right">
					<button type="button" class="btn btn-sm btn-secondary btn-add">
						<span class="fas fa-plus"></span> Добавьте тэг
					</button>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#blueprint-display" {{#if display.blueprint-display}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Отображение</span>
				</button>
			</div>
			<div id="blueprint-display" class="collapse {{#if display.blueprint-display}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Тема <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-theme"><span class="fas fa-question-circle"></span></button></label>
						<select class="form-control" name="display.theme">
							<option value="default" {{selected blueprint.display.theme "default"}}>По умолчанию</option>
							<option value="diamond" {{selected blueprint.display.theme "diamond"}}>Алмаз</option>
							<option value="giffyglyph" {{selected blueprint.display.theme "gg"}}>GG</option>
							<option value="5e" {{selected blueprint.display.theme "5e"}}>5e</option>
							<option value="transparent" {{selected blueprint.display.theme "transparent"}}>Прозрачный</option>
						</select>
					</div>
					<div class="form-group">
						<label>Столбцы</label>
						<select class="form-control" name="display.columns">
							<option value="1" {{selected blueprint.display.columns "1"}}>1</option>
							<option value="2" {{selected blueprint.display.columns "2"}}>2</option>
						</select>
					</div>
					<div class="form-group">
						<label>Url изображения <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-image"><span class="fas fa-question-circle"></span></button></label>
						<input type="text" class="form-control" name="display.image.url" {{{setValue blueprint.display.image.url}}}>
					</div>
					<div class="form-group">
						<label>Позиция</label>
						<select class="form-control" name="display.image.position">
							<option value="banner" {{selected blueprint.display.image.position "banner"}}>Баннер</option>
							<option value="inline" {{selected blueprint.display.image.position "inline"}}>В строке</option>
							<option value="none" {{selected blueprint.display.image.position "none"}}>Нет</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-armor" {{#if display.blueprint-armor}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Доспех</span>
				</button>
			</div>
			<div id="blueprint-armor" class="collapse {{#if display.blueprint-armor}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group manual-only">
						<label>КЗ</label>
						<input type="number" class="form-control" name="ac.base" placeholder="0" {{{setValue blueprint.ac.base}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Модификатор</label>
						<input type="number" class="form-control" name="ac.modifier" placeholder="0" {{{setValue blueprint.ac.modifier}}}>
					</div>
					<div class="form-group">
						<label>Тип</label>
						<input type="text" class="form-control" name="ac.type" {{{setValue blueprint.ac.type}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-hp" {{#if display.blueprint-hp}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Хиты</span>
				</button>
			</div>
			<div id="blueprint-hp" class="collapse {{#if display.blueprint-hp}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group manual-only">
						<label>Среднее</label>
						<input type="number" class="form-control" name="hp.average" placeholder="0" min="0" {{{setValue blueprint.hp.average}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Модификатор</label>
						<input type="number" class="form-control" name="hp.modifier" placeholder="0" {{{setValue blueprint.hp.modifier}}}>
					</div>
					<div class="form-group manual-only">
						<label>Бросок</label>
						<input type="text" class="form-control" name="hp.roll" {{{setValue blueprint.hp.roll}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card quickstart-only">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-damage" {{#if display.blueprint-damage}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Урон</span>
				</button>
			</div>
			<div id="blueprint-damage" class="collapse {{#if display.blueprint-damage}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group quickstart-only">
						<label>Модификатор</label>
						<input type="number" class="form-control" name="damage.modifier" placeholder="0" {{{setValue blueprint.damage.modifier}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-speed" {{#if display.blueprint-speed}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Скорость</span>
				</button>
			</div>
			<div id="blueprint-speed" class="collapse {{#if display.blueprint-speed}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>обычная</label>
						<input type="text" class="form-control" name="speed.normal" {{{setValue blueprint.speed.normal}}}>
					</div>
					<div class="form-group">
						<label>Копание</label>
						<input type="text" class="form-control" name="speed.burrow" {{{setValue blueprint.speed.burrow}}}>
					</div>
					<div class="form-group">
						<label>Взбирание</label>
						<input type="text" class="form-control" name="speed.climb" {{{setValue blueprint.speed.climb}}}>
					</div>
					<div class="form-group">
						<label>Полет</label>
						<input type="text" class="form-control" name="speed.fly" {{{setValue blueprint.speed.fly}}}>
					</div>
					<div class="form-group">
						<label>Плавание</label>
						<input type="text" class="form-control" name="speed.swim" {{{setValue blueprint.speed.swim}}}>
					</div>
					<div class="form-group">
						<label>Другая</label>
						<input type="text" class="form-control" name="speed.other" {{{setValue blueprint.speed.other}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-abilities" {{#if display.blueprint-abilities}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Значения Характеристик</span>
				</button>
			</div>
			<div id="blueprint-abilities" class="collapse {{#if display.blueprint-abilities}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="quickstart-only unique-values">
						<div class="form-group">
							<label>1ая (Лучшее)</label>
							<select class="form-control" name="abilities.quickstart[0].ability" ability="{{blueprint.abilities.quickstart.[0].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[0].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[0].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[0].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[0].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[0].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[0].ability "cha"}}>Харизма</option>
							</select>
						</div>
						<div class="form-group">
							<label>2ая</label>
							<select class="form-control" name="abilities.quickstart[1].ability" ability="{{blueprint.abilities.quickstart.[1].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[1].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[1].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[1].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[1].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[1].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[1].ability "cha"}}>Харизма</option>
							</select>
						</div>
						<div class="form-group">
							<label>3ая</label>
							<select class="form-control" name="abilities.quickstart[2].ability" ability="{{blueprint.abilities.quickstart.[2].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[2].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[2].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[2].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[2].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[2].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[2].ability "cha"}}>Харизма</option>
							</select>
						</div>
						<div class="form-group">
							<label>4ая</label>
							<select class="form-control" name="abilities.quickstart[3].ability" ability="{{blueprint.abilities.quickstart.[3].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[3].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[3].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[3].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[3].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[3].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[3].ability "cha"}}>Харизма</option>
							</select>
						</div>
						<div class="form-group">
							<label>5ая</label>
							<select class="form-control" name="abilities.quickstart[4].ability" ability="{{blueprint.abilities.quickstart.[4].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[4].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[4].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[4].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[4].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[4].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[4].ability "cha"}}>Харизма</option>
							</select>
						</div>
						<div class="form-group">
							<label>6ая (Худшая)</label>
							<select class="form-control" name="abilities.quickstart[5].ability" ability="{{blueprint.abilities.quickstart.[5].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[5].ability "str"}}>Сила</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[5].ability "dex"}}>Ловкость</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[5].ability "con"}}>Телосложение</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[5].ability "int"}}>Интеллект</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[5].ability "wis"}}>Мудрость</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[5].ability "cha"}}>Харизма</option>
							</select>
						</div>
					</div>
					<div class="manual-only">
						<div class="form-group">
							<label>Сила</label>
							<input type="number" class="form-control" name="abilities.str" placeholder="0" min="0" {{{setValue blueprint.abilities.str}}}>
						</div>
						<div class="form-group">
							<label>Ловкость</label>
							<input type="number" class="form-control" name="abilities.dex" placeholder="0" min="0" {{{setValue blueprint.abilities.dex}}}>
						</div>
						<div class="form-group">
							<label>Телосложение</label>
							<input type="number" class="form-control" name="abilities.con" placeholder="0" min="0" {{{setValue blueprint.abilities.con}}}>
						</div>
						<div class="form-group">
							<label>Интеллект</label>
							<input type="number" class="form-control" name="abilities.int" placeholder="0" min="0" {{{setValue blueprint.abilities.int}}}>
